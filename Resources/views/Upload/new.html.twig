{% trans_default_domain 'upload_data' %}
{% set is_ajax = app.request.isXmlHttpRequest() %}
{% set modal_id = 'new_upload' %}
{% extends is_ajax ? config.getTemplate('ajax_modal') : config.getTemplate('layout') %}

{% block headline %}{{ 'title.new_upload'|trans }}{% endblock %}

{% form_theme form '@UploadData/Form/form_bootstrap_3.2.x_layout.html.twig' %}

{% block content %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    {% if not is_ajax %}
        <a href="{{ path('upload_data_upload_list', {type: app.request.get('type')}) }}" class="btn btn-default">{{ 'link.back_to_list'|trans }}</a>
        <input type="submit" class="btn btn-primary" value="{{ 'button.process'|trans }}">
    {% endif %}
    {{ form_end(form) }}

{% endblock %}

{% block modal_footer %}
    {{ parent() }}
{% endblock %}

{% block ajax_script %}
    <script>

        var noty = null;

        {% if is_ajax %}
        $('#{{ form.file.vars.id }}').fileupload({
            url: '{{ path('upload_data_upload_new', {type: app.request.get('type')}) }}',
            dataType: 'json',
            start: function () {
                $('#upload-progress').show();
                if (window['PNotify'] != undefined) {
                    noty = new PNotify({
                        title: '{{ 'label.loading_file'|trans }}',
                        text: '0 %',
                        animation: 'none',
                        styling: "bootstrap3",
                        type: 'info'
                    });
                }
            },
            always: function () {
                $("#{{ modal_id }}").modal('hide')
            },
            progress: function (e, data) {
                var progress = parseInt(data.loaded / data.total * 100, 10);
                if (noty) {
                    noty.update(progress + ' %');
                }
            }
        });
        {% endif %}
    </script>
{% endblock %}

{% block foot_script %}
    {{ parent() }}
    {{ block('ajax_script') }}
{% endblock %}
